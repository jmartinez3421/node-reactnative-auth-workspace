{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "types": [
            "node",
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
